@model ST10028058_PROG7312_POE.Models.Feedback
@{
    ViewData["Title"] = "Rate your experience";
    var issue = ViewBag.Issue as ST10028058_PROG7312_POE.Models.Issue;
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@if (issue != null)
{
    <div class="alert alert-secondary">
        <div><strong>Issue location:</strong> @issue.Location</div>
        <div><strong>Category:</strong> @issue.Category</div>
    </div>
}

<form asp-action="Create" method="post" novalidate>
    <input type="hidden" asp-for="IssueId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Your rating</label>
        <div class="d-flex gap-2">
            @for (int i = 1; i <= 5; i++)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="r@i" name="Rating" value="@i" @(Model.Rating == i ? "checked" : "") />
                    <label class="form-check-label" for="r@i">@i</label>
                </div>
            }
        </div>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label">Optional comment</label>
        <textarea asp-for="Comment" rows="4" class="form-control"
                  placeholder="What went well? What can we improve? (max 500 chars)"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Submit feedback</button>
        <a class="btn btn-secondary"
           asp-controller="Issues" asp-action="Details" asp-route-id="@Model.IssueId">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
