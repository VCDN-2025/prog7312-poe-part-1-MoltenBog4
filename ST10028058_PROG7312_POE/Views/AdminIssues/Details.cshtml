@model ST10028058_PROG7312_POE.Models.Issue
@{
    ViewData["Title"] = "Issue (Admin)";
    double avg = ViewBag.AverageRating is double d ? d : 0.0;
    int count = ViewBag.RatingCount is int c ? c : 0;
    var thread = ViewBag.Feedback as IEnumerable<ST10028058_PROG7312_POE.Models.Feedback>;
}
<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Submitted</dt>
            <dd class="col-sm-9">@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Location</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Reported by</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.CreatedByName) ? Model.CreatedByName : Model.CreatedByUserId)</dd>

            <dt class="col-sm-3">Attachment</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.AttachmentFileName))
                {
                    <a href="~/uploads/@Model.AttachmentFileName" target="_blank">Open</a>
                }
                else
                {

                    <span class="text-muted">None</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body d-flex align-items-center justify-content-between">
        <div>
            <strong>Feedback summary:</strong>
            @if (count == 0)
            {
                <span class="text-muted">No ratings yet</span>
            }
            else
            {

                <span>@Math.Round(avg, 1)/5 · @count rating@(count == 1 ? "" : "s")</span>
            }
        </div>
    </div>
</div>

<h5>Feedback thread</h5>
@{
    bool any = false;
    if (thread != null) { foreach (var _ in thread) { any = true; break; } }
}
@if (!any)
{
    <div class="alert alert-light border">No feedback submitted for this issue yet.</div>
}
else
{
    <div class="list-group mb-3">
        @foreach (var f in thread!)
        {
            <div class="list-group-item">
                <div class="d-flex justify-content-between">
                    <div><strong>Rating:</strong> @f.Rating/5</div>
                    <small class="text-muted">@f.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</small>
                </div>
                <div class="mt-1"><strong>Comment:</strong> @(string.IsNullOrWhiteSpace(f.Comment) ? "-" : f.Comment)</div>
                <div class="mt-1"><strong>Admin response:</strong> @(string.IsNullOrWhiteSpace(f.AdminResponse) ? "-" : f.AdminResponse)</div>
            </div>
        }
    </div>
}

<div class="d-flex gap-2">
    <a class="btn btn-secondary" asp-action="Index">Back to all issues</a>
</div>



