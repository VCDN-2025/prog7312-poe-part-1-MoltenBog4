@using Microsoft.AspNetCore.Identity
@inject SignInManager<ST10028058_PROG7312_POE.Models.ApplicationUser> SignInManager

@{
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    var currentAction = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLowerInvariant();

    string Active(string controller, string action = "")
    {
        bool matchController = currentController == controller.ToLowerInvariant();
        bool matchAction = string.IsNullOrEmpty(action) || currentAction == action.ToLowerInvariant();
        return (matchController && matchAction) ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MunicipalConnect</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10028058_PROG7312_POE.styles.css" asp-append-version="true" />

    <style>
        /* === THEME COLORS === */
        :root {
            --primary-green: #32CD32;
            --primary-hover: #28b428;
            --accent-light: #dfffe0;
        }

        /* === NAVBAR === */
        .navbar {
            background-color: var(--primary-green) !important;
        }

            .navbar .nav-link {
                color: #212529 !important;
                font-weight: 500;
                transition: all 0.2s ease-in-out;
            }

                .navbar .nav-link:hover {
                    color: #000 !important;
                    text-decoration: underline;
                }

                .navbar .nav-link.active {
                    font-weight: 600;
                    text-decoration: underline;
                    text-underline-offset: 4px;
                }

                .navbar .nav-link.disabled {
                    opacity: .6;
                    pointer-events: none;
                    color: #495057 !important;
                }

        .navbar-brand {
            color: #212529 !important;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .navbar-text,
        .nav-link.btn {
            color: #212529 !important;
        }

        footer {
            background-color: #f1f1f1;
            color: #333;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    MunicipalConnect
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNavbar" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <!-- Common Links -->
                        <li class="nav-item">
                            <a class="nav-link @Active("issues", "create")"
                               asp-controller="Issues" asp-action="Create">Report Issue</a>
                        </li>

                        <!-- Citizen Links -->
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Citizen"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("events", "index")"
                                   asp-controller="Events" asp-action="Index">Local Events</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @Active("announcements", "index")"
                                   asp-controller="Announcements" asp-action="Index">Announcements</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @Active("servicerequests", "index")"
                                   asp-controller="ServiceRequests" asp-action="Index">Service Request Status</a>
                            </li>

                            <li class="nav-item ms-sm-3">
                                <a class="nav-link @Active("feedback", "myhistory")"
                                   asp-controller="Feedback" asp-action="MyHistory">My Feedback</a>
                            </li>
                        }

                        <!-- Admin Links -->
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @Active("adminevents") @Active("adminannouncements") @Active("adminservicerequests")"
                                   href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Manage
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminEvents" asp-action="Index">Events</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminAnnouncements" asp-action="Index">Announcements</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminServiceRequests" asp-action="Index">Service Requests</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminIssues" asp-action="Index">All Issues</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminFeedback" asp-action="Index">All Feedback</a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <!-- All Reports -->
                        <li class="nav-item ms-sm-3">
                            <a class="nav-link @Active("issues", "index")"
                               asp-controller="Issues" asp-action="Index">All Reports</a>
                        </li>
                    </ul>

                    <!-- Right Side: User Info / Login -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="navbar-text">
                                    Hello, @User.Identity?.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger ms-1">Admin</span>
                                    }
                                    else if (User.IsInRole("Citizen"))
                                    {
                                        <span class="badge bg-info text-dark ms-1">Citizen</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button class="nav-link btn btn-link" type="submit">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("account", "login")"
                                   asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @Active("account", "register")"
                                   asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2025 - MunicipalConnect by ST10028058_PROG7312_POE •
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-success">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
