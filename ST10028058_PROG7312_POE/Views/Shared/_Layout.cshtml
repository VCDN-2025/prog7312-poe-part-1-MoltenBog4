@using Microsoft.AspNetCore.Identity
@inject SignInManager<ST10028058_PROG7312_POE.Models.ApplicationUser> SignInManager
@inject UserManager<ST10028058_PROG7312_POE.Models.ApplicationUser> UserManager

@{
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    var currentAction = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLowerInvariant();

    string Active(string controller, string action = "")
    {
        bool matchController = currentController == controller.ToLowerInvariant();
        bool matchAction = string.IsNullOrEmpty(action) || currentAction == action.ToLowerInvariant();
        return (matchController && matchAction) ? "active" : "";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10028058_PROG7312_POE</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10028058_PROG7312_POE.styles.css" asp-append-version="true" />

    <style>
        .navbar .nav-link.disabled {
            opacity: .5;
            pointer-events: none;
            cursor: not-allowed;
        }

        .navbar .nav-link.active {
            font-weight: 600;
            text-decoration: underline;
            text-underline-offset: 4px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ST10028058_PROG7312_POE</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNavbar" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Left: app navigation -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link  @Active("issues", "create")"
                               asp-controller="Issues" asp-action="Create">Report Issues</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link disabled" tabindex="-1" aria-disabled="true" title="Coming soon">
                                Local Events &amp; Announcements
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link disabled" tabindex="-1" aria-disabled="true" title="Coming soon">
                                Service Request Status
                            </a>
                        </li>

                        <li class="nav-item ms-sm-3">
                            <a class="nav-link  @Active("issues", "index")"
                               asp-controller="Issues" asp-action="Index">All Reports</a>
                        </li>

                        @* Role-aware shortcuts *@
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Citizen"))
                        {
                            <li class="nav-item ms-sm-3">
                                <a class="nav-link  @Active("feedback", "myhistory")"
                                   asp-controller="Feedback" asp-action="MyHistory">My Feedback</a>
                            </li>
                        }
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-sm-3">
                                <a class="nav-link  @Active("adminfeedback", "index")"
                                   asp-controller="AdminFeedback" asp-action="Index">Manage Feedback</a>
                            </li>
                        }
                    </ul>

                    <!-- Right: auth area -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="navbar-text text-muted">
                                    Hello, @User.Identity?.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger ms-1">Admin</span>
                                    }
                                    else if (User.IsInRole("Citizen"))
                                    {

                                        <span class="badge bg-primary ms-1">Citizen</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button class="nav-link btn btn-link" type="submit">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("account", "login")" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @Active("account", "register")" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ST10028058_PROG7312_POE -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
