@model ST10028058_PROG7312_POE.Models.ServiceRequestModel
@{
    ViewData["Title"] = "View Request Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3>@Model.Title <small class="text-muted">(#@Model.RequestId)</small></h3>
            <p class="text-muted">@Model.Category • @Model.Area</p>
            <p>@Model.Description</p>

            <hr />
            <p><strong>Status:</strong> <span class="badge bg-secondary">@Model.Status</span></p>
            <p><strong>Priority:</strong> @Model.Priority</p>
            <p class="text-muted small">Submitted: @Model.DateSubmitted.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</p>

            <form asp-action="UpdateStatus" method="post" class="mb-3">
                <input type="hidden" name="id" value="@Model.RequestId" />
                <label for="statusSelect" class="form-label">Change Status:</label>
                <select name="status" id="statusSelect" class="form-select d-inline w-auto">
                    @{
                        var current = Model.Status;
                    }
                    <option value="Pending" selected="@(current == ST10028058_PROG7312_POE.Models.RequestStatus.Pending)">Pending</option>
                    <option value="InProgress" selected="@(current == ST10028058_PROG7312_POE.Models.RequestStatus.InProgress)">In Progress</option>
                    <option value="Completed" selected="@(current == ST10028058_PROG7312_POE.Models.RequestStatus.Completed)">Completed</option>
                    <option value="Cancelled" selected="@(current == ST10028058_PROG7312_POE.Models.RequestStatus.Cancelled)">Cancelled</option>
                </select>
                <button type="submit" class="btn btn-success ms-2">Save</button>
            </form>

            <form asp-action="Delete" method="post" onsubmit="return confirm('Delete this request?');">
                <input type="hidden" name="id" value="@Model.RequestId" />
                <button class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
