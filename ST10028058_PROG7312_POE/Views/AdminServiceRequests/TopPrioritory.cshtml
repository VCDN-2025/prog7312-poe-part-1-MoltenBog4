@{
    ViewData["Title"] = "Top Priority Request";
    var top = ViewBag.Top as (int RequestId, int Priority)?;
}

<div class="container mt-4">
    <h2>Highest Priority Request</h2>

    @if (top == null)
    {
        <div class="alert alert-info">No requests in queue.</div>
    }
    else
    {
        <div class="alert alert-warning">
            <strong>Request ID:</strong> @top.Value.RequestId <br />
            <strong>Priority:</strong> @top.Value.Priority
        </div>
        <a asp-action="ViewRequest" asp-route-id="@top.Value.RequestId" class="btn btn-success">View Request</a>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Requests</a>
    </div>
</div>
