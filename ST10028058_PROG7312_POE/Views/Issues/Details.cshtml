@model ST10028058_PROG7312_POE.Models.Issue
@{
    ViewData["Title"] = "Issue Details";
}
<div class="card shadow-sm rounded mb-3">
    <div class="card-body">
        <h2 class="card-title mb-3">@ViewData["Title"]</h2>
        <dl class="row mb-0">
            <dt class="col-sm-3">Submitted</dt>
            <dd class="col-sm-9"><span class="badge text-bg-secondary">@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</span></dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Location</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9"><span class="badge rounded-pill text-bg-info">@Model.Category</span></dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Attachment</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.AttachmentFileName))
                {
                    <a class="btn btn-sm btn-outline-primary" href="~/uploads/@Model.AttachmentFileName" target="_blank">Open</a>
                }
                else
                {

                    <span class="text-muted">None</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
    <a class="btn btn-primary" asp-controller="Feedback" asp-action="Create" asp-route-issueId="@Model.Id">
        Rate this issue
    </a>
</div>
