@model ST10028058_PROG7312_POE.Models.AnnouncementModel

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <h2>@Model.Title</h2>
            <p class="text-muted">@Model.Date.ToString("MMMM dd, yyyy") by @Model.Author</p>
            <hr />
            <p>@Model.Message</p>
            <a href="@Url.Action("Index")" class="btn btn-outline-primary mt-3">Back to Announcements</a>
        </div>
    </div>
</div>
