@model ST10028058_PROG7312_POE.Models.AnnouncementModel

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- Header -->
        <div class="card-header text-white py-4" style="background: linear-gradient(90deg, #28a745, #20c997);">
            <h3 class="fw-bold mb-0">
                <i class="bi bi-megaphone-fill me-2"></i>@Model.Title
            </h3>
        </div>

        <!-- Body -->
        <div class="card-body bg-light p-4">
            <div class="d-flex align-items-center mb-3 text-muted">
                <i class="bi bi-calendar-event me-2 text-success"></i>
                <span class="me-3">@Model.Date.ToString("MMMM dd, yyyy")</span>
                <i class="bi bi-person-circle me-2 text-success"></i>
                <span>@Model.Author</span>
            </div>

            <hr class="text-secondary opacity-50" />

            <p class="fs-5 text-dark" style="line-height: 1.6;">
                @Model.Message
            </p>

            <div class="text-end mt-4">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4 py-2 fw-semibold">
                    <i class="bi bi-arrow-left me-2"></i>Back to Announcements
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .card {
        transition: all 0.2s ease-in-out;
        background-color: #fff;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        }

    .card-header h3 {
        font-size: 1.75rem;
    }

    /* Text Styling */
    .card-body p {
        margin-bottom: 0;
    }

    /* Back Button Hover */
    .btn-outline-secondary:hover {
        background-color: #6c757d !important;
        color: #fff !important;
        transform: translateY(-1px);
        transition: 0.2s ease;
    }

 
</style>
