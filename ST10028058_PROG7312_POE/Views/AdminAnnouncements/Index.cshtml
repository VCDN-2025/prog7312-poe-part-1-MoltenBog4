@model IEnumerable<ST10028058_PROG7312_POE.Models.AnnouncementModel>

<div class="container mt-4">
    <h2 class="text-center mb-4">📢 Announcements</h2>
    <div class="text-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">Add Announcement</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No announcements yet.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var announcement in Model)
                {
                    <tr>
                        <td>@announcement.Title</td>
                        <td>@announcement.Message</td>
                        <td>@announcement.Date.ToString("yyyy-MM-dd")</td>
                        <td>@announcement.Author</td>
                        <td>
                            <a href="@Url.Action("ViewAnnouncement", new { date = announcement.Date })" class="btn btn-sm btn-info">View</a>
                            <a href="@Url.Action("Delete", new { date = announcement.Date })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
