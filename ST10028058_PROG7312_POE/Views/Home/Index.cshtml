@{
    ViewData["Title"] = "Home";
}
<div class="text-center py-5">
    <h1 class="display-5 fw-bold text-primary mb-3">Welcome to MunicipalConnect</h1>
    <p class="lead text-muted mb-4">Report issues, track progress, and share feedback with your municipality.</p>
    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
        <a asp-controller="Issues" asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-exclamation-circle-fill me-2"></i> Report an Issue
        </a>
        <a asp-controller="Issues" asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-list-task me-2"></i> View My Reports
        </a>
    </div>
</div>

<div class="row g-4 mt-3">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 text-center p-3">
            <i class="bi bi-geo-alt-fill fs-1 text-primary mb-2"></i>
            <h5>Location-based reporting</h5>
            <p class="text-muted mb-0">Pin exact locations of potholes, leaks, or outages.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 text-center p-3">
            <i class="bi bi-bell-fill fs-1 text-warning mb-2"></i>
            <h5>Real-time updates</h5>
            <p class="text-muted mb-0">Get notified as your report progresses.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 text-center p-3">
            <i class="bi bi-chat-dots-fill fs-1 text-success mb-2"></i>
            <h5>Simple feedback</h5>
            <p class="text-muted mb-0">Rate your experience to help improve services.</p>
        </div>
    </div>
</div>
